@page
@model Movie.Pages.Showtimes.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Showtime[0].Time)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Showtime[0].MovieID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showtime[0].movieTitle)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Showtime[0].TheaterID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showtime[0].TheaterLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Showtime) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.MovieID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.movieTitle)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.TheaterID)
            </td>
            <td>
                <a asp-page="../Theaters/Index" asp-route-TheaterLocation="@item.TheaterLocation">@Html.DisplayFor(modelItem => item.TheaterLocation)</a>
            </td>
            <td>
                <a asp-page="../Purchases/Create" asp-route-showtimeID="@item.ID" asp-route-movieID="@item.MovieID" asp-route-theaterID="@item.TheaterID">Purchase</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
