@page
@model Movie.Pages.Theaters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Theater</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Theater.ID" />
            <div class="form-group">
                <label asp-for="Theater.Location" class="control-label"></label>
                <input asp-for="Theater.Location" class="form-control" />
                <span asp-validation-for="Theater.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theater.Capacity" class="control-label"></label>
                <input asp-for="Theater.Capacity" class="form-control" />
                <span asp-validation-for="Theater.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Theater.ImaxAvailable" /> @Html.DisplayNameFor(model => model.Theater.ImaxAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
